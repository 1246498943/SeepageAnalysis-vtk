<Button x:Class="SeepageAnalysis.Views.ImageButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SeepageAnalysis.Views"
             mc:Ignorable="d" 
            Background="Transparent">
    <Button.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition Height="20"></RowDefinition>
            </Grid.RowDefinitions>
            <Border>
                <Image x:Name="ImageName" Stretch="Uniform"></Image>
            </Border>
            <Border Grid.Row="1" Margin="0,2,0,0">
                <TextBlock x:Name="TxtName" VerticalAlignment="Center" ></TextBlock>
            </Border>
        </Grid>
    </Button.Content>
</Button>
